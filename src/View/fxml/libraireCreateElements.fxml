<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="Controller.LibraireCreateElementsController"
            prefWidth="900" prefHeight="600"
            stylesheets="@../css/libraireCreateElements.css">

    <children>

        <!-- Logo en haut au centre -->
        <ImageView layoutX="380" layoutY="20"
                   fitWidth="140" fitHeight="140"
                   preserveRatio="true">
            <Image url="@../../images/logo.png"/>
        </ImageView>

        <!-- Titre de la page -->

        <!-- Bouton retour -->
        <Button text="◀ Retourner au tableau de bord"
                fx:id="backButton"
                layoutY="40"
                prefWidth="250"
                styleClass="back-button" />

        <!-- Onglets -->
        <TabPane fx:id="createTabPane"
                 layoutX="40" layoutY="180"
                 prefWidth="820" prefHeight="380"
                 maxWidth="820"
                 styleClass="create-tab-pane">

            <tabs>
                <!-- Onglet 1 : Créer un livre -->
                <Tab text="📖 Créer un livre" closable="false">
                    <ScrollPane fitToWidth="true"
                                fitToHeight="true"
                                hbarPolicy="NEVER"
                                styleClass="tab-scroll">
                        <content>
                            <VBox spacing="20">
                                <padding>
                                    <Insets top="30" right="40" bottom="30" left="40"/>
                                </padding>

                                <Label text="Informations du livre" styleClass="section-title"/>

                                <GridPane hgap="15" vgap="15">
                                    <columnConstraints>
                                        <ColumnConstraints percentWidth="30"/>
                                        <ColumnConstraints percentWidth="70"/>
                                    </columnConstraints>

                                    <Label text="Titre :" GridPane.rowIndex="0" GridPane.columnIndex="0" styleClass="field-label"/>
                                    <TextField fx:id="livreTitle"
                                               GridPane.rowIndex="0" GridPane.columnIndex="1" styleClass="input-field"/>

                                    <Label text="Auteur :" GridPane.rowIndex="1" GridPane.columnIndex="0" styleClass="field-label"/>
                                    <ComboBox fx:id="livreAuteur" promptText="Sélectionnez un auteur"
                                              GridPane.rowIndex="1" GridPane.columnIndex="1"
                                              prefWidth="400" styleClass="input-field"/>

                                    <Label text="Genre :" GridPane.rowIndex="2" GridPane.columnIndex="0" styleClass="field-label"/>
                                    <ComboBox fx:id="livreGenre" promptText="Sélectionnez un genre"
                                              GridPane.rowIndex="2" GridPane.columnIndex="1"
                                              prefWidth="400" styleClass="input-field"/>

                                    <Label text="Date de parution :" GridPane.rowIndex="3" GridPane.columnIndex="0" styleClass="field-label"/>
                                    <TextField fx:id="livreDate" promptText="YYYY"
                                               GridPane.rowIndex="3" GridPane.columnIndex="1" styleClass="input-field"/>

                                    <Label text="ISBN :" GridPane.rowIndex="4" GridPane.columnIndex="0" styleClass="field-label"/>
                                    <TextField fx:id="livreISBN" promptText="Ex: 9783161484100"
                                               GridPane.rowIndex="4" GridPane.columnIndex="1" styleClass="input-field"/>

                                    <Label text="Description :" GridPane.rowIndex="5" GridPane.columnIndex="0" styleClass="field-label"/>
                                    <TextArea fx:id="livreDescription"
                                              GridPane.rowIndex="5" GridPane.columnIndex="1"
                                              prefRowCount="4" wrapText="true" styleClass="input-field"/>

                                </GridPane>

                                <HBox spacing="15" alignment="CENTER_LEFT">
                                    <padding>
                                        <Insets top="10"/>
                                    </padding>
                                    <Button text="✓ Créer le livre" fx:id="createLivreButton"
                                             styleClass="create-button"/>
                                </HBox>
                            </VBox>
                        </content>
                    </ScrollPane>
                </Tab>

                <!-- Onglet 2 : Créer un auteur -->
                <Tab text="✍️ Créer un auteur" closable="false">
                    <ScrollPane fitToWidth="true"
                                fitToHeight="true"
                                hbarPolicy="NEVER"
                                styleClass="tab-scroll">
                        <content>
                            <VBox spacing="20">
                                <padding>
                                    <Insets top="30" right="40" bottom="30" left="40"/>
                                </padding>

                                <Label text="Informations de l'auteur" styleClass="section-title"/>

                                <GridPane hgap="15" vgap="15">
                                    <columnConstraints>
                                        <ColumnConstraints percentWidth="30"/>
                                        <ColumnConstraints percentWidth="70"/>
                                    </columnConstraints>

                                    <Label text="Nom :" GridPane.rowIndex="0" GridPane.columnIndex="0" styleClass="field-label"/>
                                    <TextField fx:id="auteurNom"
                                               GridPane.rowIndex="0" GridPane.columnIndex="1" styleClass="input-field"/>

                                    <Label text="Prénom :" GridPane.rowIndex="1" GridPane.columnIndex="0" styleClass="field-label"/>
                                    <TextField fx:id="auteurPrenom"
                                               GridPane.rowIndex="1" GridPane.columnIndex="1" styleClass="input-field"/>
                                </GridPane>

                                <HBox spacing="15" alignment="CENTER_LEFT">
                                    <padding>
                                        <Insets top="10"/>
                                    </padding>
                                    <Button text="✓ Créer l'auteur" fx:id="createAuteurButton"
                                             styleClass="create-button"/>
                                </HBox>
                            </VBox>
                        </content>
                    </ScrollPane>
                </Tab>

                <!-- Onglet 3 : Créer un genre -->
                <Tab text="🏷️ Créer un genre" closable="false">
                    <ScrollPane fitToWidth="true"
                                fitToHeight="true"
                                hbarPolicy="NEVER"
                                styleClass="tab-scroll">
                        <content>
                            <VBox spacing="20">
                                <padding>
                                    <Insets top="30" right="40" bottom="30" left="40"/>
                                </padding>

                                <Label text="Informations du genre" styleClass="section-title"/>

                                <GridPane hgap="15" vgap="15">
                                    <columnConstraints>
                                        <ColumnConstraints percentWidth="30"/>
                                        <ColumnConstraints percentWidth="70"/>
                                    </columnConstraints>

                                    <Label text="Nom du genre :" GridPane.rowIndex="0" GridPane.columnIndex="0" styleClass="field-label"/>
                                    <TextField fx:id="genreNom"
                                               GridPane.rowIndex="0" GridPane.columnIndex="1" styleClass="input-field"/>
                                </GridPane>

                                <HBox spacing="15" alignment="CENTER_LEFT">
                                    <padding>
                                        <Insets top="10"/>
                                    </padding>
                                    <Button text="✓ Créer le genre" fx:id="createGenreButton"
                                             styleClass="create-button"/>
                                </HBox>
                            </VBox>
                        </content>
                    </ScrollPane>
                </Tab>
            </tabs>

        </TabPane>
    </children>
</AnchorPane>